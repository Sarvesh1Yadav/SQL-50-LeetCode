# Write your MySQL query statement below
select s.student_id,s.student_name,SU.subject_name,count(e.student_id) as attended_exams  from Students s CROSS JOIN Subjects SU left join Examinations e on s.student_id = e.student_id AND SU.subject_name = E.subject_name  
group by  s.student_id ,s.student_name,SU.subject_name
order by s.student_id ,SU.subject_name
